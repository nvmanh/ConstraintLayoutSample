<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_done"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dummy"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:inputType="textPersonName"
        android:background="#c4bfbf"
        android:padding="@dimen/activity_horizontal_margin"
        android:hint="Type username..."
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="75dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="75dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main_done"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/activity_main_done"
        android:layout_marginTop="230dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/activity_main_done"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:inputType="numberPassword"
        android:background="#c4bfbf"
        android:padding="@dimen/activity_horizontal_margin"
        android:hint="Type password..."
        app:layout_constraintLeft_toLeftOf="@+id/edtName"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/edtName"
        android:layout_marginTop="20dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/edtName"
        tools:layout_constraintRight_creator="0" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:text="Sign in"
        android:textColor="#FFFFFFFF"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="298dp"
        app:layout_constraintTop_toBottomOf="@id/edtPassword"
        app:layout_constraintRight_toRightOf="@+id/activity_main_done"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        tools:layout_constraintRight_creator="0" />
</android.support.constraint.ConstraintLayout>
